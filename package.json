{
  "name": "game-map-component",
  "version": "1.0.0",
  "description": "A reusable, dependency-free interactive map web component",
  "type": "module",
  "main": "dist/game-map.min.js",
  "scripts": {
    "build": "tsc",
    "serve": "node dev-server.js",
    "dev": "tsc-watch --onSuccess \"npm run test:unit\" & node dev-server.js",
    "watch": "tsc --watch",
    "test": "npm run test:unit && npm run test:ui",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:ui": "playwright test tests/ui",
    "test:ui:headed": "playwright test tests/ui --headed",
    "test:ui:debug": "playwright test tests/ui --debug"
  },
  "keywords": [
    "web-component",
    "map",
    "interactive",
    "vanilla-js",
    "game-map",
    "zero-dependencies"
  ],
  "author": "Your Name",
  "license": "MIT",
  "files": [
    "dist/",
    "demo/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/game-map-component.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/game-map-component/issues"
  },
  "homepage": "https://github.com/yourusername/game-map-component#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^12.0.0",
    "neostandard": "^0.11.0",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
